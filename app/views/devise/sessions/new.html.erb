<h2>ログイン</h2>

<div class="form-contena">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-field" %>
      <i class="fas fa-envelope email-icon"></i>
    </div>

    <div class="field">
      <%= f.label :password, class: "label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "text-field" %>
      <i class="fas fa-unlock-alt passConf-icon"></i>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field check">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: "submit-btn", style: "margin-bottom: 20px" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
